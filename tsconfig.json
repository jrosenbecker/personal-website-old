{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": ["es6", "es2015.promise"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/web-app"
  ]
}
